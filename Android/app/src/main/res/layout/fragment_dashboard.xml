<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentLastest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    tools:context="com.laniuslab.studioteam.formulae.Fragment.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="175dp">
                <ImageView
                    android:id="@+id/iv_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tv_racetittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="HONG KONG EPRIX"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_event"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R5"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | May 13, 2017"
                            android:textSize="18sp"
                            android:textColor="@color/Gray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:text="19"
                                android:textSize="28sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:text="DAYS"
                                android:textSize="12sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:text="12"
                                android:textSize="28sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:text="HRS"
                                android:textSize="12sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textSize="28sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:text="MINS"
                                android:textSize="12sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:text="OFFICIAL"
                                android:textSize="12sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="TIMEKEEPER"
                                android:textSize="12sp"
                                android:textStyle="italic"
                                android:textColor="@android:color/white"/>
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/tag_heuer_logo"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="SCHEDULE"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="PLAN YOUR DAY"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/btn_schedule"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:text="View Full Schedule"
                        android:textColor="@android:color/white"
                        android:background="@color/colorPrimary"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="EVENT MAP"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_racetittle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="HONG KONG EPRIX"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/DarkGray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="left">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@color/BlackFR"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_circuitlength"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1.93 KM"
                                android:textSize="14sp"
                                android:textColor="@color/Gray"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_turns"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="14 TURNS"
                            android:textSize="14sp"
                            android:textColor="@color/Gray"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:id="@+id/iv_circuit"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"/>

                    <Button
                        android:id="@+id/btn_eventmap"
                        android:layout_width="200dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"
                        android:text="View Event Map"
                        android:textColor="@android:color/white"
                        android:background="@color/colorPrimary"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="FREQUENTLY ASKED QUESTIONS"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_racetittle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="HONG KONG EPRIX"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_faq"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="FAQ"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"/>
        </LinearLayout>



    </RelativeLayout>


</ScrollView>
